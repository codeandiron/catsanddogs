<h1>Listing animal_areas</h1>

<table>
  <thead>
    <tr>
      <th>Forward sorting area</th>
      <th>Dogs</th>
      <th>Cats</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @animal_areas.each do |animal_area| %>
      <tr>
        <td><%= animal_area.forward_sorting_area %></td>
        <td><%= animal_area.dogs %></td>
        <td><%= animal_area.cats %></td>
        <td><%= animal_area.latitude %></td>
        <td><%= animal_area.longitude %></td>
        <td><%= link_to 'Show', animal_area %></td>
        <td><%= link_to 'Edit', edit_animal_area_path(animal_area) %></td>
        <td><%= link_to 'Destroy', animal_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal area', new_animal_area_path %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
